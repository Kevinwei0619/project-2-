<div class="flexslider basicslider">
  <ul class="slides">
    <li>
      <article>
        <!-- <p>Egestas</p> -->
        <h3 class="heading">Plan your perfect day</h3>
        <p>Organize your wedding dream team.</p>
        <footer>
          <form class="group" method="post" action="#">
            <fieldset>
              {{!--
              <legend>Sign-Up:</legend> --}}

              <div class="search--buttons">
                <div class="search--input">
                  <select class="form-control" id="vendorType">
                    <option value="null">Select a Vendor Type</option>
                    <option value="photographer">Photographer</option>
                    <option value="cakes">Cakes</option>
                    <option value="dresses">Dresses</option>
                    <option value="catering">Catering</option>
                    <option value="venues">Venues</option>
                  </select>
                </div>
                <div class="search--input">
                  <input type="text" value="" id="searhInput" placeholder="Search Local Vendors &hellip;">
                  <button class="fa fa-sign-in" id="searchSubmit" type="submit" title="Submit"><em>Submit</em></button>
                </div>

              </div>
            </fieldset>
            <div class="reg-login-links">
              <a class="button button--signin button--login" href="/login">Login</a> <a class="button button--signin button--register"
                href="/register">Register</a>
            </div>
          </form>
          <div id="searchResults" class="hidden">
            {{#if results}}
              <p>{{searchResult.dataValues.fullName}}</p>
              <p>{{searchResult.dataValues}}</p>
              <p>{{searchResult.Vendor.dataValues.fullName}}</p>
              {{#each searchResult}}
              <p>{{searchResult.dataValues.fullName}}</p>
              {{/each}} 
            {{else}}
            <p>Sorry, we cant seem to find anything matching your search. Try again?</p>
            {{/if}}
          </div>

        </footer>
      </article>
    </li>
    <li>
      <article>
        <h3 class="heading">To be a special member</h3>
        <p>pay less more happy</p>
        <footer><a class="btn inverse" href="/register">Join</a></footer>
      </article>
    </li>
  </ul>
</div>